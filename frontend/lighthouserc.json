{
  "ci": {
    "collect": {
      "startServerCommand": "npm run preview -- --host 0.0.0.0",
      "startServerReadyPattern": "Local:.*http://localhost:4173",
      "startServerReadyTimeout": 60000,
      "url": [
        "http://localhost:4173/",
        "http://localhost:4173/select",
        "http://localhost:4173/clearpath",
        "http://localhost:4173/fairwins"
      ],
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop",
        "onlyCategories": ["accessibility", "performance", "best-practices", "seo"],
        "skipAudits": [],
        "chromeFlags": "--no-sandbox --disable-gpu --disable-dev-shm-usage"
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:accessibility": ["warn", {"minScore": 0.9}],
        "categories:performance": ["warn", {"minScore": 0.7}],
        "categories:best-practices": ["warn", {"minScore": 0.8}],
        "categories:seo": ["warn", {"minScore": 0.8}],
        "color-contrast": "warn",
        "meta-viewport": "error",
        "document-title": "error",
        "html-has-lang": "error",
        "html-lang-valid": "error",
        "image-alt": "error",
        "label": "error",
        "link-name": "error",
        "button-name": "error",
        "aria-allowed-attr": "error",
        "aria-required-attr": "error",
        "aria-valid-attr": "error",
        "aria-valid-attr-value": "error",
        "aria-allowed-role": "warn",
        "duplicate-id-aria": "error",
        "tabindex": "error",
        "heading-order": "warn",
        "label-content-name-mismatch": "warn",
        "total-byte-weight": "off",
        "unsized-images": ["warn", {"minScore": 0.9}],
        "unused-css-rules": "off",
        "unused-javascript": "off",
        "uses-rel-preconnect": "off",
        "valid-source-maps": "off",
        "bootup-time": "off",
        "dom-size": "off",
        "mainthread-work-breakdown": "off",
        "render-blocking-resources": "off",
        "server-response-time": "off",
        "content-width": "off",
        "csp-xss": "off",
        "errors-in-console": "warn",
        "installable-manifest": "off",
        "maskable-icon": "off",
        "robots-txt": "off",
        "splash-screen": "off",
        "themed-omnibox": "off"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
